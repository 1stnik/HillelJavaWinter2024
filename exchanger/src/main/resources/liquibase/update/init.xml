<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="ct-user" author="oStepurko">
    <createTable tableName="users">
      <column name = "id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="first_name" type="VARCHAR(255)"/>
      <column name="last_name" type="VARCHAR(255)"/>
      <column name="phone" type="VARCHAR(255)"/>
      <column name="email" type="VARCHAR(255)"/>
      <column name="status" type="BOOLEAN"/>
    </createTable>
  </changeSet>

  <changeSet id="ac-user" author="oStepurko">
    <addColumn tableName="users">
      <column name="telegram_chat_id" type="long"/>
    </addColumn>
  </changeSet>

  <changeSet id="ct-rate" author="oStepurko">
    <createTable tableName="rate">
      <column name = "id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="currency" type="varchar(3)"/>
      <column name="buy" type="VARCHAR(15)"/>
      <column name="sale" type="VARCHAR(15)"/>
      <column name="receive" type="TIMESTAMP"/>
    </createTable>
  </changeSet>

  <changeSet author="oStepurko" id="ct-wallet">
    <createTable tableName="wallet">
      <column name="id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="currency" type="varchar(3)"/>
      <column name="balance" type="DECIMAL"/>
      <column name="last_update" type="TIMESTAMP"/>
      <column name="user_id" type="INT"/>
    </createTable>
  </changeSet>

  <changeSet id="ct-type-currency" author="oStepurko">
    <sql>
      ALTER TABLE wallet
          MODIFY COLUMN currency enum('USD','UAH','EUR');

    </sql>
  </changeSet>

  <changeSet author="oStepurko" id="ct-Transaction">
    <createTable tableName="transaction">
      <column name="id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="status" type="varchar(50)"/>
      <column name="currency_from" type="varchar(3)"/>
      <column name="amount_from" type="DECIMAL"/>
      <column name="currency_to" type="varchar(3)"/>
      <column name="amount_to" type="DECIMAL"/>
      <column name="type" type="varchar(12)"/>
      <column name="sender" type="varchar(12)"/>
      <column name="receiver" type="varchar(12)"/>
      <column name="comment" type="varchar(1024)"/>
      <column name="update_at" type="DateTime"/>
      <column name="code" type="varchar(10)"/>
    </createTable>
  </changeSet>

  <changeSet id="alter_table_transaction" author="hillel">
    <sql>
      ALTER TABLE
        transaction
        MODIFY COLUMN
        status enum ('PENDING','EXECUTED','FAILED');
    </sql>
    <sql>
      ALTER TABLE
        transaction
        MODIFY COLUMN
        currency_from enum ('UAH', 'USD', 'EUR');
    </sql>
    <sql>
      ALTER TABLE
        transaction
        MODIFY COLUMN
        currency_to enum ('UAH', 'USD', 'EUR');
    </sql>
    <sql>
      ALTER TABLE
        transaction
        MODIFY COLUMN
        type enum ( 'PUT','GET','EXCH','TRANSF');
    </sql>
  </changeSet>

</databaseChangeLog>
