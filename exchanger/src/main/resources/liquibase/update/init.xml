<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="ct-user" author="oStepurko">
    <createTable tableName="users">
      <column name = "id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="first_name" type="VARCHAR(255)"/>
      <column name="last_name" type="VARCHAR(255)"/>
      <column name="phone" type="VARCHAR(255)"/>
      <column name="email" type="VARCHAR(255)"/>
      <column name="status" type="BOOLEAN"/>
    </createTable>
  </changeSet>

  <changeSet id="ac-user" author="oStepurko">
    <addColumn tableName="users">
      <column name="telegram_chat_id" type="long"/>
    </addColumn>
  </changeSet>

  <changeSet id="ct-rate" author="oStepurko">
    <createTable tableName="rate">
      <column name = "id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="currency" type="varchar(3)"/>
      <column name="buy" type="VARCHAR(15)"/>
      <column name="sale" type="VARCHAR(15)"/>
      <column name="receive" type="TIMESTAMP"/>
    </createTable>
  </changeSet>

  <changeSet author="oStepurko" id="ct-wallet">
    <createTable tableName="wallet">
      <column name="id" type="INT" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="currency" type="varchar(3)"/>
      <column name="balance" type="DECIMAL"/>
      <column name="last_update" type="TIMESTAMP"/>
      <column name="user_id" type="INT"/>
    </createTable>
  </changeSet>

  <changeSet id="ct-type-currency" author="oStepurko">
    <sql>
      ALTER TABLE wallet
          MODIFY COLUMN currency enum('USD','UAH','EUR');

    </sql>
  </changeSet>

</databaseChangeLog>
