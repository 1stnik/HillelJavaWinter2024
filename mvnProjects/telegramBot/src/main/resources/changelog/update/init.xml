<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog logicalFilePath="db.changelog-1.0.xml" xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="tlg_user" author="o.Stepurko" >
        <createTable tableName="tlg_user">
            <column name = "id" type="INT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(200)"/>
            <column name="chat_id" type="VARCHAR(25)"/>
        </createTable>
    </changeSet>

    <changeSet id="tlg_notificatiorn" author="aStepurko">
        <createTable tableName="tlg_notification">
        <column name = "id" type="INT" autoIncrement="true">
            <constraints nullable="false" primaryKey="true"/>
        </column>
        <column name="date" type="TIMESTAMP"/>
        <column name="user_id" type="INT"/>
        <column name="message" type="VARCHAR(500)"/>
    </createTable>
    </changeSet>

</databaseChangeLog>
